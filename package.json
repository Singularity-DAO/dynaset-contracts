{
  "name": "dynasetforge",
  "version": "1.0.0",
  "description": "contribution buffer contract for dynasets",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test:cov": "mv ./node_modules/truffle ./node_modules/truffle_tbd && truffle run coverage --network development --testfiles './test/forgev1.js' && mv ./node_modules/truffle_tbd ./node_modules/truffle",
    "truffle": "truffle",
    "test": "truffle test",
    "test:dynaset": "truffle test ./test/Dynaset.test.js",
    "test:factory": "truffle test ./test/DynasetFactory.test.js",
    "test:forgev1": "truffle test ./test/ForgeV1.test.js",
    "test:directforge": "truffle test ./test/DirectForge.test.js",
    "test:oracle": "truffle test ./test/DynasetTvlOracle.test.js",
    "test:tokenforge": "truffle test ./test/TokenForge.test.js",
    "compile": "npx hardhat compile --force",
    "unit-test": "npx hardhat --config hardhat.unit-test.config.js test --logs",
    "unit-test-coverage": "npx hardhat --config hardhat.unit-test.config.js coverage --solcoverjs .solcover.hardhat.js",
    "integration-test": "npx hardhat --config hardhat.integration-test.config.js test --logs",
    "integration-test-coverage": "npx hardhat --config hardhat.integration-test.config.js coverage --solcoverjs .solcover.hardhat.js",
    "run-ts": "npx ts-node -r tsconfig-paths/register",
    "setup-aws-ganache": "npm run run-ts -- ./scripts/setup-aws-ganache.ts",
    "forge-aws": "npm run run-ts -- ./scripts/forge-aws.ts"
  },
  "author": "js",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "bignumber.js": "^9.0.1",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.2.0",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.7",
    "hardhat-log-remover": "^2.0.2",
    "hardhat-tracer": "^1.1.0-rc.6",
    "solidity-coverage": "^0.7.21"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@openzeppelin/contracts": "4.7.0",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@truffle/hdwallet-provider": "^1.7.0",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "https://github.com/Uniswap/v3-core/tarball/0.8",
    "@uniswap/v3-periphery": "https://github.com/Uniswap/v3-periphery/tarball/0.8",
    "axios": "^0.24.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.6.9",
    "solidity-coverage": "0.8.0-beta.1",
    "truffle": "5.4.18",
    "truffle-assertions": "^0.9.2",
    "truffle-contract-size": "^2.0.1",
    "truffle-plugin-verify": "^0.5.18",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4",
    "web3": "^1.6.1"
  }
}
